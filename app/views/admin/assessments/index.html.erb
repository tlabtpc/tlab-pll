<%= javascript_include_tag 'admin' %>
<section class="main-content__body main-content__body--flush admin-assessments-index">
  <h1><%= Assessment.where(test: false).count %> Assessments created since <%= Assessment.where(test: false).minimum(:created_at).to_date %></h1>
  <div class="admin-assessments-index__metrics">
    <div class= "admin-assessments-index__metrics">
      <div class= "admin-assessments-index__metric">
        <label>By county</label>
        <%= bar_chart(Assessment.by_county) %>
      </div>
      <div class= "admin-assessments-index__metric">
        <label>By category</label>
        <%= bar_chart(Assessment.by_category) %>
      </div>
      <div class= "admin-assessments-index__metric">
        <label>By week</label>
        <%= line_chart(Assessment.by_week) %>
      </div>
      <div class= "admin-assessments-index__metric">
        <label>Assessment progress</label>
        <%= pie_chart(Assessment.by_progress.sort.to_h, colors: [
          "#64991D",
          "#9FCC64",
          "#FFF796",
          "#F0E86D",
          "#CCCCCC"
        ]) %>
      </div>
    </div>
  </div>
</section>
